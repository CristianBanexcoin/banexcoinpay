@model GenerateRecoveryCodesViewModel
@{
    ViewData.SetActivePageAndTitle(ManageNavPages.TwoFactorAuthentication, "Códigos de recuperación");
}

<h4>@ViewData["Title"]</h4>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="fa fa-warning"></span>
        <strong>Ponga estos códigos en un lugar seguro.</strong>
    </p>
    <p>
       Si pierde su dispositivo y no tiene los códigos de recuperación, perderá el acceso a su cuenta.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @for(var row = 0; row < Model.RecoveryCodes.Count(); row += 2)
        {
            <code>@Model.RecoveryCodes[row]</code><text>&nbsp;</text><code>@Model.RecoveryCodes[row + 1]</code><br />
        }
    </div>
</div>
